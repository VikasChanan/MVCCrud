@model System.Data.DataTable
@{
    ViewBag.Title = "ViewProductDetails";
}

<h2>Product Details</h2>
<table class="table table-bordered table-striped">

    <tr>
        <td>Product Name</td>
        <td>Product Description</td>
        <td>Quantity</td>
        <td>Price</td>
        <td></td>
    </tr>

    @for(int i=0; i < Model.Rows.Count; i++)
    {
    <tr>
      <td>@Model.Rows[i][1]</td>
      <td>@Model.Rows[i][2]</td>
      <td>@Model.Rows[i][3]</td>
      <td>@Model.Rows[i][4]</td>
      
      <td>
          <a href="@Url.Action("Edit","Product",new {@id = Model.Rows[0][0] })">Edit</a>
          <a href="@Url.Action("Delete","Product",new {@id = Model.Rows[0][0] })">Delete</a>
      </td>
    </tr>
    }
</table>

<a href="@Url.Action("Create","Product")">Create</a>

